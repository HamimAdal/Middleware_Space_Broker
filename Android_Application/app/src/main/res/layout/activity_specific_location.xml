<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:context="com.example.illuminationmodify.specificLocationActivity">

        <Button
            android:id="@+id/btnspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnModify"
            android:layout_marginStart="100dp"
            android:layout_marginTop="290dp"
            android:text="SHOW THE SPACE" />

    <TextView
        android:id="@+id/touchdisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="370dp"
        android:text="Cordiantes of  touched position: "/>

        <TextView
            android:id="@+id/invertedxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="420dp"
            android:textSize="20sp" />

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:text="Total size: "/>


    <ImageView
        android:id="@+id/spaceImage"
        android:layout_width="350dp"
        android:layout_height="273dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="00dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="530dp"
        android:text="Raspberry IP Address and port number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="10.0.0.32:21567"
        android:ems="10"
        android:layout_marginTop="580dp"
        android:id="@+id/ipAddress"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnQuery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnModify"
        android:layout_below="@+id/ipAddress"
        android:layout_marginStart="00dp"
        android:layout_marginTop="40dp"
        android:text="Query WITH SPECIFIC LOCATION" />

    <TextView
        android:id="@+id/queryvalue"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ipAddress"
        android:layout_marginStart="00dp"
        android:layout_marginTop="110dp"
        />


        <EditText
            android:id="@+id/modify"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"

            android:layout_marginEnd="94dp"
            android:layout_marginStart="00dp"
            android:layout_marginTop="770dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Value"/>

        <Button
            android:id="@+id/btnModify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ipAddress"
            android:layout_marginStart="00dp"
            android:layout_marginTop="200dp"
            android:text="MODIFY WITH SPECIFIC LOCATION" />

        <EditText
            android:id="@+id/maintainwithlocation"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"

            android:layout_marginEnd="89dp"
            android:layout_marginStart="00dp"
            android:layout_marginTop="900dp"
            android:ems="10"
            android:hint="Enter Value"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnMaintainwithlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnModify"
            android:layout_marginStart="00dp"
            android:layout_marginTop="90dp"
            android:text="Maintain With Specific Location" />







    </RelativeLayout>

</ScrollView>